<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/card_background"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="10dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Title"/>
                <TextView
                    android:id="@+id/card_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Status"/>
                <TextView
                    android:id="@+id/card_create_at"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Created At"/>
                <TextView
                    android:id="@+id/card_closed_at"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Closed At"/>
                <TextView
                    android:id="@+id/card_owner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Owner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_title_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="feature 1 added"/>
                <TextView
                    android:id="@+id/card_status_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Closed"/>
                <TextView
                    android:id="@+id/card_create_at_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="24/12/2022"/>
                <TextView
                    android:id="@+id/card_closed_at_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="1/1/2023"/>
                <TextView
                    android:id="@+id/card_owner_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="mayank-navi"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>